@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="RoomId"/>
    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />
    <label> Oda Başlığı</label>
    <input type="text" asp-for="RoomTitle" class="form-control" />
    <br />
    <label> Oda Fiyatı</label>
    <input type="text" asp-for="RoomPrice" class="form-control" />
    <br />
    <label> Oda Açıklaması</label>
    <input type="text" asp-for="RoomDescription" class="form-control" />
    <br />
    <label> Oda Resmi</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control" />
    <br />
    <label> Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <br />
    <label> Banyo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />
    <button class="btn btn-primary">Odayı Güncelle</button>

</form>