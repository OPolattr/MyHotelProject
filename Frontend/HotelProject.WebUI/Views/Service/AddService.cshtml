@model AddServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label> Hizmet Adı</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <label> Hizmet Başlığı</label>
    <input type="text" asp-for="ServiceTitle" class="form-control" />
    <span asp-validation-for="ServiceTitle" class="text-danger"></span>
    <br />
    <label> Hizmet Açıklaması</label>
    <input type="text" asp-for="ServiceDescriptiom" class="form-control" />
    <span asp-validation-for="ServiceDescriptiom" class="text-danger"></span>

    <br />
    <button class="btn btn-primary">Hizmeti Ekle</button>

</form>

