@model UpdateGuestDto
@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="GuestID" />
    <label>Misafir Adı</label>
    <input type="text" asp-for="GuestName" class="form-control" />
    <span asp-validation-for="GuestName" class="text-danger"></span>
    <br />
    <label> Misafir Soyadı</label>
    <input type="text" asp-for="GuestSurname" class="form-control" />
    <span asp-validation-for="GuestSurname" class="text-danger"></span>
    <br />
    <label>Misafir Şehir</label>
    <input type="text" asp-for="GuestCity" class="form-control" />
    <span asp-validation-for="GuestCity" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Misafiri Ekle</button>

</form>