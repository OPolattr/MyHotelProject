@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Misafir İsim</th>
        <th>Misafir Soyisim</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.GuestName</td>
            <td>@item.GuestSurname</td>
            <td>@item.GuestCity</td>
            <td> <a href="/Guest/DeleteGuest/@item.GuestID" class="btn btn-danger">Sil</a> </td>
            <td> <a href="/Guest/UpdateGuest/@item.GuestID" class="btn btn-success">Güncelle</a> </td>
        </tr>
    }
</table>

<a href="/Guest/AddGuest" class="btn btn-info">Yeni Misafir Ekle</a>